<!DOCTYPE html>
<html>
  <head>
    <title>Mogumogu</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <header>
   <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
     <div class="container">
       <a class="nabar-brand">
         <span>mogu mogu</span>
       </a>

       <div class="navbar-collapse collapse">
         <ul class="navbar-nav ml-auto">
           <% if user_signed_in? %>
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
               <%= link_to "マイページ", user_path %>
               </li>
               <li class="nav-item">
               <%= link_to "レシピ一覧", user_recipes_path(user_id: current_user.id) %>
               </li>
               <li class="nav-item">
               <%= link_to "ブックマーク一覧", bookmarks_user_path %>
               </li>
               <li class="nav-item">
               <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
               </li>
               </ul>
           <% elsif admin_signed_in? %>
           <ul class="navbar-nav ml-auto">
              <li class="nav-item">
              <%= link_to "レシピ一覧", admin_recipes_path %>
              </li>
              <li class="nav-item">
              <%= link_to "ユーザー一覧", admin_users_path %>
              </li>
              <li class="nav-item">
              <%= link_to "コメント一覧", admin_comments_path %>
              </li>
              ジャンル一覧
              <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              </ul>
           <% else %>
           <ul class="navbar-nav ml-auto">
             <li class="nav-item">
             <%= link_to "会員登録", new_user_registration_path %>
             </li>
             <li class="nav-item">
             <%= link_to "ログイン", new_user_session_path %>
             </li>
             <li class="nav-item">
             <%= link_to "about", homes_about_path %>
             </li>
             <li class="nav-item">
             <%= link_to "レシピを見る", root_path %>
             </li>
             </ul>
           <% end %>


         </ul>
       </div>
     </div>
   </nav>
  </header>
  <%= yield %>
  </body>
</html>