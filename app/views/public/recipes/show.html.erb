<h1>Public::Recipes#show</h1>
<p>Find me in app/views/public/recipes/show.html.erb</p>

<%= "のレシピ"%>

<div>
  <%= form_with model: [@recipe, @post_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>

<% if @recipe.favorited_by?(current_user) %>
    <p>
      <%= link_to post_image_favorites_path(@recipe), method: :delete do %>
      ♥<%= @recipe.favorites.count %> いいね
<% end %>
    </p>
<% else %>
    <p>
      <%= link_to post_image_favorites_path(@recipe), method: :post do %>
      ♡<%= @recipe.favorites.count %> いいね
<% end %>
